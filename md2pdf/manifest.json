{
  "manifest_version": 3,
  "name": "Markdown to PDF Converter",
  "version": "1.0.0",
  "description": "Convert markdown content to PDF from web pages, local files, or manual input",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "optional_permissions": [
    "downloads"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "lib/markdown-styles.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}

